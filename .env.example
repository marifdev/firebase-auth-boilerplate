# Firebase Configuration
# Get these from Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=your-client-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----"

# JWT Configuration
# This should be a long, random string used to sign JWT tokens
# You can generate one using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret

# Server Configuration (Optional)
# Port number for the server to listen on, defaults to 3000 if not set
PORT=3000 